generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  orders   Order[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  USER
  ADMIN
}

model GalleryImage {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String
  publicId    String
  style       String
  tags        String[]
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("gallery_images")
}

model Pricing {
  id           String  @id @default(cuid())
  style        String
  size         String
  numberOfFaces Int
  basePrice    Float
  isActive     Boolean @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([style, size, numberOfFaces])
  @@map("pricing")
}

model Offer {
  id              String      @id @default(cuid())
  title           String
  description     String?
  type            OfferType
  value           Float
  maxDiscount     Float?
  couponCode      String?     @unique
  isActive        Boolean     @default(true)
  priority        Int         @default(0)
  startDate       DateTime?
  endDate         DateTime?
  minOrderValue   Float?
  applicableStyles String[]
  firstOrderOnly  Boolean     @default(false)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  orders Order[]

  @@map("offers")
}

enum OfferType {
  FLAT_DISCOUNT
  PERCENTAGE_DISCOUNT
  FIRST_ORDER_DISCOUNT
}

model Order {
  id            String        @id @default(cuid())
  orderNumber   String        @unique
  userId        String?
  customerName  String
  customerEmail String
  customerPhone String
  style         String
  size          String
  numberOfFaces Int
  specialNotes  String?
  basePrice     Float
  discountAmount Float        @default(0)
  finalPrice    Float
  status        OrderStatus   @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  offerId       String?
  couponCode    String?
  previewUrl    String?
  adminNotes    String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user   User?  @relation(fields: [userId], references: [id])
  offer  Offer? @relation(fields: [offerId], references: [id])
  images OrderImage[]

  @@map("orders")
}

enum OrderStatus {
  PENDING
  PREVIEW_SENT
  REVISION
  APPROVED
  COMPLETED
}

enum PaymentStatus {
  PENDING
  PAID
  REFUNDED
}

model OrderImage {
  id       String @id @default(cuid())
  orderId  String
  imageUrl String
  publicId String
  order    Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("order_images")
}

model AdminSettings {
  id            String   @id @default(cuid())
  whatsappNumber String
  bannerTitle   String?
  bannerText    String?
  bannerActive  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("admin_settings")
}